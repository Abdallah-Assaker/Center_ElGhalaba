@model AdminLevelVM

@{
    SelectList stages = new(Model.Stages, "ID", "Name");
}

<div class="offset-2 col-8">
    <form asp-action="CreateLevel" class="form-floating">
        <div class="d-flex justify-content-evenly form-group">

            <label asp-for="StageID"></label>
            <select asp-items="@stages" asp-for="StageID" class="form-select"></select>
            <span asp-validation-for="StageID" class="text-danger"></span>

            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

            <input type="submit" class="btn btn-outline-success" />
        </div>
    </form>
</div>

