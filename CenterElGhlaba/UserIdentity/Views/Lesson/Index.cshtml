@using Microsoft.AspNetCore.Identity
@using Center_ElGhalaba.Constants
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ApplicationUser user = await UserManager.GetUserAsync(User);
}

@model List<Lesson>
@{
    ViewData["Title"] = "Index";
}


<div class="courses-area section-padding40 fix">
    <div class="row justify-content-center">
        <div class="col-10">
            <div class="section-tittle text-center mb-55">
                <h2>Your Lessons</h2>
                <div class="row justify-content-center" id="LessonContainer">
                    @foreach (Lesson item in Model)
                    {
                        <div class="col-lg-4 col-md-6  ">
                            <div class="properties properties2 mb-30">
                                <div class="properties__card">
                                    <div class="properties__img overlay1">
                                        <a href="#"><img src="data:image/*;base64,@(Convert.ToBase64String(item.CoverPicture))" alt=""></a>
                                    </div>
                                    <div class="properties__caption">
                                        <h3><a href="#">@item.Title</a></h3>
                                        <div class="properties__footer d-flex justify-content-between align-items-center">

                                            
                                                <span class="bi bi-heart-fill" style="color:#e867ff"> @item.Likes</span>
                                           

                                           
                                                <span class="fa fa-eye" style="color:#e867ff"> @item.Views</span>
                                            
                                            <span>@item.Price EGP</span>


                                        </div>
                                       
                                        <a href="#" class="border-btn border-btn2">Watch Lesson</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.3/signalr.min.js" integrity="sha512-/rQxup+foY5qwZmEmvBhb0PHxx/Fd+ESH7Xw+pozdSKhygl+ZSQm1X6LWDQrxz+NoRAZwR03X78UinlY1C4RrQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        var hub =
            new signalR.HubConnectionBuilder().withUrl("/NewLesson").build();
        hub.start().then(function () {
