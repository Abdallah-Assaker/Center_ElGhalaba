@using Microsoft.AspNetCore.Identity
@using Center_ElGhalaba.Constants
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ApplicationUser user = await UserManager.GetUserAsync(User);
}

@model List<Lesson>
@{
    ViewData["Title"] = "Index";
}

<!-- Courses area start -->
<div class="courses-area section-padding40 fix">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-8">
                <div class="section-tittle text-center mb-55">
                    <h2>Our featured courses</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="properties properties2 mb-30">
                    
                    @foreach (var lesson in Model)
                    {
                        if(lesson.IsDeleted == false)
                        {
                            <div class="properties__card">
                                <div class="properties__img overlay1">
                                    <img src="data:image/*;base64,@(Convert.ToBase64String(lesson.CoverPicture))" alt="Cover Picture">
                                </div>
                                <div class="properties__caption">

                                    <h3>@lesson.Title</h3>

                                    <div class="properties__footer d-flex justify-content-between align-items-center">

                                        <div>
                                            <i class="fa fa-eye" style="font-size:24px;color:#FF9F67">
                                                <span style="color:#FF9F67"> @lesson.Views</span>
                                            </i>
                                        </div>
                                        <div>
                                            <i class='fas fa-thumbs-up' style='font-size:24px;color:#FF9F67'>
                                                <span class="bi bi-heart-fill" style="color:#FF9F67"> @lesson.Likes</span>
                                            </i>
                                        </div>

                                        <div class="price">
                                            <span>@lesson.Price EGP</span>
                                        </div>
                                    </div>
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        if (await UserManager.IsInRoleAsync(user, RolesConsts.Student.ToString()))
                                        {
                                            <a asp-action="Details" asp-route-id="@lesson.ID" asp-route-userId="@user.Id" class="border-btn border-btn2">Find Out More</a>
                                        }
                                    }
                                    else
                                    {
                                        <a asp-action="Details" asp-route-id="@lesson.ID" class="border-btn border-btn2">Find Out More</a>
                                    }

                                </div>
                            </div>
                        }
                        
                    }

                </div>
            </div>
        </div>
    </div>
</div>
