@*AllSubject*@


<div class="topic-area section-padding40">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-8">
                <div class="section-tittle text-center mb-55">
                    <h2>Explore top subjects</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var subject in Model.Subjectslist)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">

                    <div class="single-topic text-center mb-30">
                        <div class="topic-img">
                            <img src="assets/img/gallery/topic1.png" alt="">
                            <div class="topic-content-box">
                                <div class="topic-content">
                                    <h3><a asp-action="Index" asp-controller="Lesson">@subject.Name</a></h3>           @*require Action*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@*New lesson*@
<div class="courses-area section-padding40 fix">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-8">
                <div class="section-tittle text-center mb-55">
                    <h2>Our New featured courses</h2>
                </div>
            </div>
        </div>
        <div class="courses-actives">
            <!-- Single -->
            <div class="properties pb-20">
                @foreach (var nlesson in Model.NewLessonslistadded)
                {
                    <div class="properties__card">
                        <div class="properties__img overlay1">

                            <a asp-action="Details" asp-controller="Lesson" asp-route-Id="">
                                @*Require ID*@
                                @if(nlesson.CoverPicture != null){
                                    <img src="data:image/*;base64,@(Convert.ToBase64String(nlesson.CoverPicture))" alt="">
                                }
                            </a>
                        </div>
                        <div class="properties__caption">
                            <p>User Experience</p>
                            <h3><a asp-action="Details" asp-controller="Lesson" asp-route-Id="">@nlesson.Title</a></h3> @*Require ID*@
                            <p>
                                @nlesson.Description
                            </p>
                            <div class="properties__footer d-flex justify-content-between align-items-center">
                                <div class="restaurant-name">

                                    <h5>@nlesson.Views <span><del>@nlesson.Likes</del></span></h5>              @*Require Attention*@
                                    <p>@nlesson.PublishDate</p>
                                </div>
                                <div class="price">
                                    <p> @nlesson.Price LE <span><del>@(nlesson.Price - nlesson.Discount)</del></span></p>     @*Require Attention*@
                                </div>
                            </div>
                            <a asp-action="Details" asp-controller="Lesson" asp-route-Id="" class="border-btn border-btn2">Find out more</a>
                            @*Require ID*@
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>

